<idea-plugin>
    <id>com.maxciv.infer-plugin</id>
    <name>InferPlugin</name>
    <vendor email="max2896@ya.ru">Max Oleynik</vendor>

    <description>IntelliJ Platform plugin for Facebook Infer</description>

    <idea-version since-build="173.0"/>

    <!--<depends>org.jetbrains.idea.maven</depends>-->
    <!--<depends>org.jetbrains.plugins.gradle</depends>-->

    <project-components>
        <component>
            <interface-class>com.maxciv.infer.plugin.InferProjectComponent</interface-class>
            <implementation-class>com.maxciv.infer.plugin.InferProjectComponent</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="com.maxciv.infer.plugin.config.InferPluginState"
                        serviceImplementation="com.maxciv.infer.plugin.config.InferPluginState"/>

        <toolWindow id="Infer"
                    secondary="true"
                    anchor="bottom"
                    factoryClass="com.maxciv.infer.plugin.toolwindow.ToolWindowFactory"
                    icon="/icons/testPassed.png"/>
    </extensions>
</idea-plugin>
