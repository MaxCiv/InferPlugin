<idea-plugin>
    <id>com.maxciv.infer-plugin</id>
    <name>InferPlugin</name>
    <vendor email="max2896@ya.ru">Max Oleynik</vendor>

    <description>IntelliJ Platform plugin for Facebook Infer</description>

    <idea-version since-build="173.0"/>

    <!--<depends>org.jetbrains.idea.maven</depends>-->
    <!--<depends>org.jetbrains.plugins.gradle</depends>-->

    <project-components>
        <component>
            <interface-class>com.maxciv.infer.plugin.InferProjectComponent</interface-class>
            <implementation-class>com.maxciv.infer.plugin.InferProjectComponent</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="com.maxciv.infer.plugin.config.InferPluginState"
                        serviceImplementation="com.maxciv.infer.plugin.config.InferPluginState"/>

        <toolWindow id="Infer"
                    secondary="true"
                    anchor="bottom"
                    factoryClass="com.maxciv.infer.plugin.ui.toolwindow.ToolWindowFactory"
                    icon="/icons/testPassed.png"/>
    </extensions>

    <actions>
        <group id="ResultsTabActions" text="Result Tab Actions" popup="true">
            <action id="RunFileAnalysisAction"
                    class="com.maxciv.infer.plugin.actions.tabs.results.RunFileAnalysisAction"
                    text="Run analysis on current file"
                    description="Run analysis on current file"
                    icon="/icons/run.png"/>

            <action id="RunFullAnalysisAction"
                    class="com.maxciv.infer.plugin.actions.tabs.results.RunFullAnalysisAction"
                    text="Run analysis on current project"
                    description="Run analysis on current project"
                    icon="/icons/run_run.png"/>
        </group>
    </actions>
</idea-plugin>
